{
  "name": "summonyourwill",
  "productName": "SummonYourWill",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "description": "SummonYourWill â€” app motivacional con minijuegos",
  "author": "SummonYourWill Team",
  "main": "main.cjs",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron --no-sandbox .",
    "start:cell": "cross-env APP_MODE=cell NODE_ENV=development electron --no-sandbox .",
    "clean": "rimraf dist",
    "copy": "cpx \"{src,assets,Cellphone,lib,minigames,performance}/**/*\" dist/ && cpx \"*.{html,js,css,json}\" dist/ && cpx dark-theme.css dist/",
    "minify:html": "html-minifier --collapse-whitespace --remove-comments --minify-js true --minify-css true --input-dir dist --output-dir dist --file-ext html",
    "minify:css": "cleancss -o dist/style.css dist/style.css && cleancss -o dist/idlebossrush.css dist/style.css",
    "obfuscate:js": "javascript-obfuscator dist --output dist --compact true --self-defending true --control-flow-flattening true",
    "serve": "node server.cjs",
    "start:pm2": "pm2 start ecosystem.config.js",
    "build:secure": "node obfuscate.cjs",
    "test": "node --check script.js && find src -name '*.js' -print0 | xargs -0 -n1 node --check",
    "verify:branch": "node scripts/lint-changed.js develop develop3",
    "postinstall": "node scripts/check-wincodesign-cache.js",
    "verify": "eslint src/performance/modalOptimizer.js scripts src/examples && tsc -p tsconfig.json && node scripts/check-duplicates.js",
    "build:pre": "node scripts/prepare-build-src.js",
    "fix:imports": "node scripts/fix-import-paths.js",
    "test:build": "node scripts/test-production-build.js",
    "copy:static": "node scripts/copy-static.js",
    "build:obf": "node scripts/obfuscate-build-src.js",
    "prebuild:kill": "node scripts/kill-electron.cjs",
    "prebuild:unlock": "node scripts/unlock-dist.cjs",
    "prebuild:preflight": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/preflight-devmode.ps1",
    "clean:dist": "node scripts/utils/prebuild-clean.js",
    "build:app": "cross-env ELECTRON_BUILDER_CACHE=C:\\electron-builder-cache electron-builder",
    "clean:builder-cache": "rimraf C:\\electron-builder-cache\\winCodeSign",
    "build": "npm run prebuild:preflight && npm run prebuild:kill && npm run verify && npm run build:pre && npm run copy:static && npm run build:obf && npm run prebuild:unlock && npm run clean:dist && npm run clean:builder-cache && npm run build:app",
    "build2": "npm run prebuild:preflight && npm run prebuild:kill && npm run verify && npm run build:pre && npm run copy:static && npm run prebuild:unlock && npm run clean:dist && npm run clean:builder-cache && npm run build:app",
    "seed:wincodesign": "node scripts/seed-wincodesign.cjs",
    "legacy:prebuild": "npm run obfuscate:src && npm run clean && npm run copy && npm run obfuscate:js && npm run minify:html && npm run minify:css",
    "devtools:status": "node scripts/toggle-devtools.cjs status",
    "devtools:enable": "node scripts/toggle-devtools.cjs true",
    "devtools:disable": "node scripts/toggle-devtools.cjs false",
    "devtools:toggle": "node scripts/toggle-devtools.cjs toggle",
    "bump": "node scripts/bump.cjs"
  },
  "build": {
    "appId": "com.summonyourwill.desktop",
    "productName": "SummonYourWill",
    "directories": {
      "output": "C:/dev/SYW-out/dist",
      "buildResources": "assets"
    },
    "files": [
      "build-src/**",
      "assets/**",
      "Cellphone/**",
      "lib/**",
      "minigames/**",
      "performance/**",
      "main.cjs",
      "preload.cjs",
      "devtoolsenprod.json",
      "script.js",
      "style.css",
      "ui/**",
      "renderer/**",
      "perf.js",
      "Background.*",
      "*.html",
      "*.js",
      "*.css",
      "*.json",
      "!**/*EXAMPLE*.js",
      "!**/*.example.js",
      "!**/*.map",
      "!**/examples/**",
      "!**/*.test.*",
      "!**/__tests__/**"
    ],
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/favicon_32x32.ico",
      "executableName": "SummonYourWill"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/node": "^24.3.0",
    "7zip-bin": "^5.2.0",
    "clean-css": "^5.3.3",
    "clean-css-cli": "^5.6.3",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.8",
    "eslint": "^9.34.0",
    "eslint-plugin-import": "^2.30.0",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "html-minifier": "^4.0.0",
    "html-minifier-terser": "^7.2.0",
    "javascript-obfuscator": "^4.1.1",
    "p-limit": "^3.1.0",
    "pm2": "^6.0.8",
    "rimraf": "^5.0.5",
    "terser": "^5.43.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@fastify/compress": "^8.1.0",
    "bitecs": "^0.3.40",
    "chokidar": "^4.0.3",
    "dotenv": "^17.2.1",
    "electron-store": "^10.1.0",
    "emoji-picker-element": "^1.27.0",
    "fastify": "^5.4.0",
    "gsap": "^3.13.0",
    "howler": "^2.2.4",
    "keymaster": "^1.6.2",
    "matter-js": "^0.20.0",
    "pixi.js": "^8.11.0",
    "quick-lru": "^7.0.1",
    "redis": "^5.6.0",
    "sharp": "^0.34.3",
    "stats.js": "^0.17.0",
    "throttle-debounce": "^5.0.2",
    "uuid": "^11.1.0",
    "v8-compile-cache": "^2.4.0",
    "ws": "^8.18.3"
  }
}
